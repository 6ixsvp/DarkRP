-- **Weird Category**
DarkRP.createCategory{
    name = "Weird", -- Category name displayed in the F4 menu
    categorises = "jobs", -- This is a job category
    startExpanded = true, -- Category starts expanded
    color = Color(128, 0, 128), -- Purple for "Weird" vibe
    canSee = function(ply) return true end, -- Everyone can see this category
    sortOrder = 200, -- Determines the order in the list
}

-- **Weird Jobs**

TEAM_RAT = DarkRP.createJob("Rat", {
    color = Color(139, 69, 19), -- Brown for a rat-like vibe
    model = "models/props_c17/doll01.mdl", -- A small, rat-like placeholder model
    description = [[You are a filthy rat. Scavenge for scraps and hide in the shadows.]],
    weapons = {},
    command = "rat",
    max = 2,
    salary = 0,
    admin = 0,
    vote = false,
    hasLicense = false,
    category = "Weird"
})

